<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".Common.UserLogInSignUp.UserSignUp1">

    <ProgressBar
        android:id="@+id/progress"
        android:progressTint="@color/signature_blue"
        android:progress="20"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/progress"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="80dp"
        android:layout_marginTop="5dp"
        android:text="@string/pg_1"
        android:textColor="@color/black" />


    <LinearLayout android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:fontFamily="@font/roboto_medium"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/sloganText"
            android:textColor="@color/black"
            android:layout_marginBottom="40dp"
            android:layout_height="wrap_content"
            android:transitionName="sloganText"
            android:text="@string/please_fill_in_your_details"
            android:textSize="18sp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/signup_fullname"
            app:startIconDrawable="@drawable/ic_edit"
            app:startIconTint="@color/black"
            app:hintTextColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"
            android:hint="@string/full_name"
            app:boxStrokeWidth="0dp"
            app:placeholderTextColor="@color/black"
            android:textColorHint="@color/black"
            app:boxBackgroundColor="@color/pastel_violet_lighter"
            app:boxStrokeWidthFocused="0dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/black"
                android:inputType="text"
                android:layout_height="60dp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/username"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"
            app:startIconDrawable="@drawable/ic_profile"
            app:startIconTint="@color/black"
            android:hint="@string/username"
            app:boxBackgroundColor="@color/pastel_yellow"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:placeholderTextColor="@color/black"
            android:textColorHint="@color/black"
            app:hintTextColor="@color/black"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:inputType="text"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_bold"
                android:layout_height="60dp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="10dp"
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"
            app:startIconDrawable="@drawable/ic_email"
            app:startIconTint="@color/black"
            android:hint="@string/email"
            app:boxStrokeWidthFocused="0dp"
            app:boxBackgroundColor="@color/pastel_green"
            app:boxStrokeWidth="0dp"
            app:placeholderTextColor="@color/black"
            android:textColorHint="@color/black"
            app:hintTextColor="@color/black"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:inputType="text"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_bold"
                android:layout_height="60dp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="10dp"
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"
            app:startIconDrawable="@drawable/ic_lock"
            app:startIconTint="@color/black"
            android:hint="@string/password"
            app:passwordToggleEnabled="true"
            app:hintTextColor="@color/black"
            app:boxBackgroundColor="@color/light_orange"
            app:boxStrokeWidthFocused="0dp"
            app:boxStrokeWidth="0dp"
            app:placeholderTextColor="@color/black"
            android:textColorHint="@color/black"
            app:passwordToggleTint="@color/black"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/black"
                android:inputType="text"
                android:layout_height="60dp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:layout_marginTop="40dp"
            android:onClick="callPage2"
            android:layout_width="match_parent"
            android:elevation="1dp"
            android:id="@+id/next_btn"
            android:layout_gravity="center"
            android:layout_height="60dp"
            android:text="@string/next"/>

    </LinearLayout>

</RelativeLayout>