<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Common.Connection.CheckConnection">

    <TextView
        android:layout_gravity="center"
        android:layout_marginTop="110dp"
        android:textSize="22sp"
        android:fontFamily="@font/muli_black"
        android:textColor="@color/black"
        android:text="@string/looks_like_you_are_offline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="@string/you_need_an_internet_connection_to_use_bluepill_check_your_connection_and_try_again"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginTop="-80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/error_404"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:drawableTint="@color/white"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="-70dp"
        android:drawableRight="@drawable/ic_refresh"
        android:text="Retry" />

</LinearLayout>