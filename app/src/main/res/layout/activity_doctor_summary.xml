<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Doctor.DoctorSummary">

    <TextView
        android:id="@+id/month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/muli_black"
        android:text="Month"
        android:layout_marginTop="100dp"
        android:textColor="#37000000"
        android:layout_marginLeft="30dp"
        android:textSize="30sp"/>

    <TextView
        android:layout_toRightOf="@id/month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/muli_black"
        android:text="Year"
        android:id="@+id/year"
        android:textColor="#37000000"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/muli_black"
        android:text="D"
        android:textColor="#37000000"
        android:textSize="200sp" />

    <ImageView
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="100dp"
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/summary"/>

    <TextView
        android:layout_above="@id/textView7"
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Hello Doctor,"
        android:textColor="@color/doctor_pink_dark"
        android:textSize="36sp" />

    <TextView
        android:layout_above="@id/go"
        android:layout_marginLeft="20dp"
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:text="You have 12 active\npatient list"
        android:textColor="@color/doctor_pink"
        android:layout_marginBottom="20dp"
        android:textSize="22sp" />

    <Button
        android:drawableTint="@color/white"
        android:drawableEnd="@drawable/ic_navigate_next"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="50dp"
        android:id="@+id/go"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:backgroundTint="@color/doctor_pink_dark"
        android:text="View patients now"/>

</RelativeLayout>