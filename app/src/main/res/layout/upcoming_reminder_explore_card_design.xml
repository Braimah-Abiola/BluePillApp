<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:background="@color/signature_blue_darker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/logo"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:backgroundTint="@color/white"
            android:layout_width="wrap_content"
            android:background="@drawable/round"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_medical_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tint="@color/signature_blue_darker" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_1"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Take Paracetamol"/>

            <TextView
                android:textColor="@color/white_two"
                android:textSize="12sp"
                android:fontFamily="@font/roboto_regular"
                android:text="Medicine prescribed to help reduce my pain"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_1"
                android:id="@+id/txt_2"/>

            <TextView
                android:id="@+id/txt_3"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_regular"
                android:textSize="12sp"
                android:layout_below="@id/txt_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MEDICINE"/>

            <TextView
                android:id="@+id/txt_4"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/white"
                android:layout_below="@id/txt_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time: 8:00"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_marginRight="10dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:backgroundTint="@color/white"
            android:layout_width="wrap_content"
            android:background="@drawable/round"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tint="@color/signature_blue_darker" />

        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>