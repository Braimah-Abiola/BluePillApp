    <style name="Theme.BluePill.RatingBar">
        <item name="colorSecondary">@color/gold</item>
    </style>

    <style name="Theme.BluePill.Custom.Settings">
        <item name="colorPrimary">@color/signature_blue</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/signature_blue</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

</resources>