<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BluePill" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/signature_blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/signature_blue</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/signature_blue</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.BluePill.Custom">
        <item name="colorPrimary">@color/signature_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/signature_blue</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="Theme.BluePill.Custom2">
        <item name="colorPrimary">@color/signature_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name="Theme.BluePill.Custom3">
        <item name="colorPrimary">@color/doctor_pink_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name="Theme.BluePill.Facebook">
        <item name="colorPrimary">#3A559F</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">#3A559F</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="Theme.BluePill.Doctor">
        <item name="colorPrimary">@color/doctor_pink</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/doctor_pink</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="Theme.BluePill.Orange">
        <item name="colorPrimary">@color/orange_button</item>
